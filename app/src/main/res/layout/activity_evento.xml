<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="kioja.com.musv.CadastroActivity"
    android:weightSum="1">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Novo Evento"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:textAlignment="center" />


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        android:text="Nome do Evento" />


    <EditText
        android:id="@+id/editTextNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:lines="1"
        android:singleLine="true"
        android:maxLines="1"
        android:imeOptions="actionDone"
        android:maxLength="100"
        android:text=""
        android:textAlignment="gravity" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:text="Descrição" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:focusable="true"
        android:maxLength="300"
        android:ems="10"
        android:id="@+id/editTextDesc"
        android:height="80dp" />



    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        android:text="Local" />

    <EditText

        android:id="@+id/editTextLocal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:lines="1"
        android:maxLength="100"
        android:singleLine="true"
        android:maxLines="1"
        android:imeOptions="actionDone"
        android:textAlignment="inherit" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:text="Cidade" />

    <EditText
        android:id="@+id/editTextCidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lines="1"
        android:singleLine="true"
        android:maxLength="100"
        android:maxLines="1"
        android:imeOptions="actionDone"
        android:text="" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        android:text="Estado" />

    <EditText
        android:id="@+id/editTextEstado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLength="100"
        android:lines="1"
        android:singleLine="true"
        android:maxLines="1"
        android:imeOptions="actionDone"
        android:text="" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            android:text="Produtor Responsável:" />


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"

        android:id="@+id/spinnerProdutor" />

    <ImageView
        android:id="@+id/btnCriarEvento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:src="@drawable/confirm" />


</LinearLayout>


